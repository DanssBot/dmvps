deleteID_reply () {
delid=$(sed -n ${message_text[$id]}p ${CID})
sed -i "${message_text[$id]}d" ${CID}
bot_retorno="$LINE\n"
          bot_retorno+="ID eliminado con exito!\n"
          bot_retorno+="ID: ${delid}\n"
          bot_retorno+="$LINE\n"
msj_fun
upfile_src
}

addID_reply () {
      [[ $(cat ${CID}|grep "${message_text[$id]}") = "" ]] && {
        echo "/${message_text[$id]}" >> ${CID}
          bot_retorno="  âš¡ ğ™±ğš’ğšğš—ğšŸğšğš—ğš’ğšğš˜  ğšŠğš•  ğ™±ğš˜ğšğ™¶ğšğš—  ADM-NETVPS  âš¡\n"
          bot_retorno+="âœ… *ID agregado * âœ…\n"
          bot_retorno+="$LINE\n"
          bot_retorno+="$(< ${CID})\n"
          bot_retorno+="$LINE\n"
          bot_retorno+="New ID: ${message_text[$id]}\n"
          bot_retorno+="$LINE"

          bot_retor="  âš¡ ğ™±ğš’ğšğš—ğšŸğšğš—ğš’ğšğš˜  ğšŠğš•  ğ™±ğš˜ğšğ™¶ğšğš—  ADM-NETVPS  âš¡\n"
          bot_retor+="El Administrador $(cat < /etc/ADM-db/resell) te autoriso\n"
